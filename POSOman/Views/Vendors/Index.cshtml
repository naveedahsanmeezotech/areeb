@model IEnumerable<MangoERP.Models.Vendor>

@{
    ViewBag.Title = "Index";
}

<h2>List</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="content-body">
    <section id="striped-row-form-layouts">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-content collpase show">
                        <div class="card-body">
                            <table class="table">
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Vendor_Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Contact_Person)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Vendor_Contact)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Vendor_Payment_Type)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Address)
                                    </th>
                                    <th></th>
                                </tr>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Vendor_Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Contact_Person)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Vendor_Contact)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Vendor_Payment_Type)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Address   )
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Status)
                                        </td>

                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.Vendor_ID }) |
                                            @Html.ActionLink("Details", "Details", new { id = item.Vendor_ID }) |
                                      </td>
                                    </tr>
                                }

                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>