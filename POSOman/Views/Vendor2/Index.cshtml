@model IEnumerable<MangoERP.Models.tbl_Vendor>

@{
    ViewBag.Title = "Vendors";
}<style>
    @@media print {
        html, body {
            height: 90vh;
        }
    }
</style>
<div class="content-body">
    <!-- DOM - jQuery events table -->
    <section id="dom">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h2 class="card-title">Vendors</h2>       
                        <a class="heading-elements-toggle"><i class="fa fa-ellipsis-v font-medium-3"></i></a>
                    </div>
                    <div class="card-content collapse show">
                        <div class="card-body card-dashboard">
                            <div class="table-responsive">

                                <table id="tblVendor" class="table table-striped table-bordered alt-pagination">
                                    <thead>
                                        <tr>
                                            <th>
                                                @Html.DisplayName("Ven Code")
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Name)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Address)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.ContactPerson)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Landline)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Cell)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Email)
                                            </th>
                                            <th>
                                                Balance
                                            </th>

                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.VendorCode)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Name)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Address)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.ContactPerson)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Landline)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Cell)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Email)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.OpeningBalance)
                                                </td>

                                                <td>
                                                    @Html.ActionLink("Edit", "Edit", new { id = item.VendorID }) |
                                                    @*@Html.ActionLink("Details", "Details", new { id = item.VendorID }) |*@
                                                    @Html.ActionLink("Delete", "Delete", new { id = item.AccountID })
                                                </td>
                                            </tr>
                                        }
                                    </tbody>

                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
@section scripts{
    <script type="text/javascript">
        $('#tblVendor').DataTable({
            dom: 'Bfrtip',
            "order": [[0, "desc"]],
            buttons: [
                {
                    extend: 'print',
                    title: '',
                    messageTop: function () {
                        
                        return '<img src="@ViewBag.Picture" class="brand-logo" align = "left" margin="10px"><h1  align="center">@ViewBag.CompanyName</h1><h5 align="center">@ViewBag.CompanyAddress </h5><h5 align="center">Contact: @ViewBag.CompanyCell</h5><hr /><h4 align="center">Vendors List</h4>';


                    },
                    messageBottom: '<br/><h6 align="center">Developed By : Nascent Innovations</h6>',
                    exportOptions: {
                        columns: [0, 1, 2, 3, 4, 5,6]
                    }
                }
            ]
        });       
    </script>
}
