
@{
    ViewBag.Title = "GraveReport";
}

<h2>Grave Report</h2>

<section id="dom">
    <div class="row">
        <div class="col-12">

            <div class="form-row">
                <div class="col-md-2 mb-3">
                    <label>Grave </label>
                    <div class="input-group">
                        <select name="cars" id="cars" class="form-control">
                            <option value="Available">Available</option>
                            <option value="Booked">Booked</option>
                            <option value="Reserved">Reserved</option>
                        </select>
                    </div>
                </div>

                <div class="col-md-2 mb-3">
                    <label>Total Grave </label>
                    <div class="input-group">
                        <input class="form-control" value="" id="count"  readonly        / >
                    </div>
                </div>
                <div class="col-md-2 mb-3">
                    <label></label>
                    <div class="input-group">
                        <button type="button" class="btn btn-primary" id="btnSearch"><i class="fa fa-check-square-o"></i>Search</button>
                    </div>
                </div>

            </div>
            <div  style="background-color:white">
                <table  class="table table-striped table-bordered dynamic-height" style="background-color:white">
                    <thead>
                        <tr>
                            <th>Grave Name</th>
                           
                        </tr>
                    </thead>
                    <tbody id="tblProduct"></tbody>
                </table>
            </div>

            <div id="SearchResult">
            </div>
        </div>
    </div>
</section>
@section scripts{
    <script src="~/Scripts/js/scripts/extensions/block-ui.js" type="text/javascript"></script>
    <script src="~/Scripts/js/scripts/modal/components-modal.js" type="text/javascript"></script>
    <link rel="stylesheet" type="text/css" href="~/Content/vendors/css/extensions/sweetalert.css">
    @*<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>*@
    <script src="~/Scripts/sweetalert.min.js"></script>

    <link rel="stylesheet" type="text/css" href="~/Content/vendors/css/extensions/toastr.css">
    <script src="~/Scripts/jquery.validate.js" type="text/javascript"></script>
    <script>
        $(document).ready(function () {
            console.log("ready!");
            $("#btnSearch").click(function () {
               
                var dataos = $("#cars option:selected").text();
                debugger

                $.ajax({
                    type: "POST",
                    contentType: "application/json; charset=utf-8",
                    url: '/Reports/Grave',
                    async: false,
                    data: JSON.stringify({ GraveId: dataos }),  // Use JSON.stringify to send the data as JSON

                    success: function (data) {
                        {
                            $('#tblProduct').html('');
                            console.log(data);
                            $('#count').val(data[0].Total);
                            console.log(data);
                            var daas = data[0].ProductsList;
                            var htmlContent = '';
                            for (var i = 0; i < daas.length; i++) {
                                htmlContent += '<tr>' +
                                    '<td>' + daas[i] + '</td>' +
                                      '</tr>';
                            }

                            $('#tblProduct').html(htmlContent);

                        }
                    },
                    error: function (err) { console.log(err); }
                });

            });
        });



    </script>
}