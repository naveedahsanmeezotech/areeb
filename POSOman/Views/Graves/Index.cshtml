@model IEnumerable<MangoERP.Models.Grave>

@{
    ViewBag.Title = "Index";
}

<style>
    table, th, td {
        border: 5px solid white;
    }

    td {
        FONT-STYLE: initial;
        padding: 24px;
        color: white;
        font-size: 40px;
        width: 142px;
        height: 95px;
        align-items: center;
    }
</style>
<style>
    * {
        box-sizing: border-box;
    }

    .row {
        margin-left: -5px;
        margin-right: -5px;
    }

    .column {
        float: left;
        width: 50%;
        padding: 5px;
    }

    /* Clearfix (clear floats) */
    .row::after {
        content: "";
        clear: both;
        display: table;
    }

    table {
        border-collapse: collapse;
        border-spacing: 0;
        width: 100%;
        border: 1px solid #ddd;
    }

    th, td {
        text-align: left;
        padding: 16px;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2;
    }
</style>


<div class="row">
    <div class="column">
        <table>
            <tr>

                @foreach (var item in Model)
                {
                    if (@item.Section_Id == 2)
                    { 
                        if (@item.Grave_Status_Id == 1 )
                        {
                            <!-- AVAIABLE -->
                            <td style="background-color:greenyellow">
                                <a href="~/customers/Edit/?Id=@item.Id">@item.Grave_Name</a>

                            </td>
                        }
                        else if (@item.Grave_Status_Id == 2)
                        {

                            <td style="background-color:yellow">
                                <a href="~/customers/Edit/?Id=@item.Id">@item.Grave_Name</a>
                            </td>
                        }
                        else
                        {

                            <td style="background-color:cyan">
                                <a href="~/customers/Edit/?Id=@item.Id">@item.Grave_Name</a>
                            </td>
                        }
                    }
                }
            </tr>
        </table>
    </div>
