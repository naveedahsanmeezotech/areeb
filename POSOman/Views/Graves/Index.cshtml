@model IEnumerable< MangoERP.Models.Grave>

@{
    ViewBag.Title = "Index";
}

<style>
    table, th, td {
        border: 5px solid white;
    }
td {
    FONT-STYLE: initial;
    padding: 24px;
    color: white;
    font-size: 40px;
    width: 142px;

height: 95px;
align-items: center;
}
</style>

<table>

   
