@model IEnumerable<MangoERP.Models.Purchase>
@{
    ViewBag.Title = "Index";
}
<style>
    .table th, .table td {
        padding: 0.75rem 1.2rem;
    }
</style>
<div class="content-body">
    <!-- DOM - jQuery events table -->
    <section id="dom">
        <div class="row">
            <div class="col-12">
                <h2>RETURN PURCHASE</h2> <br />
                <div class="card">
                    @using (Html.BeginForm("Save", "PurchaseReturn",
new { ReturnUrl = ViewBag.ReturnUrl },
FormMethod.Post, new { @class = "form form-horizontal striped-rows form-bordered" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="card-content collapse show">
                            <div class="card-body card-dashboard">
                                <div class="table-responsive">
                                    <table id="tblPO" class="table table-striped table-bordered alt-pagination">
                                        <thead>
                                            <tr>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.GR)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.PurchaseNo)
                                                </th>
                                                <th>
                                                    Vendor
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.DateIssued)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.TotalAmount)
                                                </th>
                                                <th hidden>
                                                    @Html.DisplayNameFor(model => model.Id)
                                                </th>
                                                @*<th>
                                                        <label>Payment Type</label>
                                                    </th>*@
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.GR)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.PurchaseNo)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Vendor.Vendor_Name)
                                                    </td>
                                                    <td>
                                                        @*@Html.DisplayFor(modelItem => item.PurchaseDate)*@
                                                        @Convert.ToString(string.Format("{0:dd/MM/yyyy}", item.DateIssued))
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.TotalAmount)
                                                    </td>


                                                    <td>
                                                        @*@Html.ActionLink("Details","null",new { onclick = "getInvoiceDetails(" + item.OrderID + ");" })*@
                                                        <a href="#" onclick="getInvoiceDetails(@item.Id); return false;">Details</a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="form-actions right">
                            <input type="button" id="btnSave" value="Save" class="btn btn-primary" />
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-content collapse show">
                        <div id="dvtbl" class="table-responsive">
                            <table id="tbl" class="table">
                                <thead>
                                    <tr>
                                        @*<th></th>*@
                                        <th>ID</th>
                                        <th>Material Name.</th>

                                        <th>Qty</th>

                                        <th>Returned Qty</th>
                                        <th>Returning Qty</th>

                                        <th>Sub Total</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                                <tfoot>
                                    <tr>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td>Total</td>
                                        <td><input type="text" class="form-control input-sm" style="width:110px;" id="txtTotal" disabled /></td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
@section scripts{
    <script type="text/javascript">
        $('#tblPO').DataTable();
    </script>
    @*<link rel="stylesheet" type="text/css" href="~/Content/vendors/css/extensions/toastr.css">
    <script src="~/Scripts/vendor/js/extensions/toastr.min.js"></script>
    <script src="~/Scripts/customScripts/general.js"></script>*@
    <script src="~/Scripts/purchase/Return_1.js"></script>
    @*<script src="~/Scripts/customScripts/helper.js"></script>*@
    <link rel="stylesheet" type="text/css" href="~/Content/vendors/css/extensions/sweetalert.css">

    <script src="~/Scripts/sweetalert.min.js" type="text/javascript"></script>
}


